{
  "info": {
    "_postman_id": "file-versioning-app-collection",
    "name": "file-versioning-app API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for file-versioning-app (Register/Login, Repos, Files)"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"secret123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth","register"]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"secret123\"\n}", "options": { "raw": { "language": "json" } } },
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth","login"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Repositories",
      "item": [
        {
          "name": "Get my repos",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/repos", "host": ["{{baseUrl}}"], "path": ["repos"] }
          }
        },
        {
          "name": "Create repo",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"My Repo\",\n  \"description\": \"A sample repository\"\n}", "options": { "raw": { "language": "json" } } },
            "url": { "raw": "{{baseUrl}}/repos", "host": ["{{baseUrl}}"], "path": ["repos"] }
          }
        },
        {
          "name": "Get single repo",
          "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/repos/:id", "host": ["{{baseUrl}}"], "path": ["repos", ":id"] } }
        },
        {
          "name": "Update repo",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Renamed\",\n  \"description\": \"Updated description\"\n}", "options": { "raw": { "language": "json" } } },
            "url": { "raw": "{{baseUrl}}/repos/:id", "host": ["{{baseUrl}}"], "path": ["repos", ":id"] }
          }
        },
        {
          "name": "Delete repo",
          "request": { "method": "DELETE", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/repos/:id", "host": ["{{baseUrl}}"], "path": ["repos", ":id"] } }
        },
        {
          "name": "Add collaborator",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"collab@example.com\"\n}", "options": { "raw": { "language": "json" } } },
            "url": { "raw": "{{baseUrl}}/repos/:id/collaborators", "host": ["{{baseUrl}}"], "path": ["repos", ":id", "collaborators"] }
          }
        }
      ]
    },
    {
      "name": "Files",
      "item": [
        {
          "name": "Upload file (create/version)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "body": { "mode": "formdata", "formdata": [ { "key": "file", "type": "file", "src": [] } ] },
            "url": { "raw": "{{baseUrl}}/files/:repoId/upload", "host": ["{{baseUrl}}"], "path": ["files", ":repoId", "upload"] }
          }
        },
        {
          "name": "List files in repo",
          "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/files/:repoId", "host": ["{{baseUrl}}"], "path": ["files", ":repoId"] } }
        },
        {
          "name": "Get file versions",
          "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/files/:repoId/files/:fileId/versions", "host": ["{{baseUrl}}"], "path": ["files", ":repoId", "files", ":fileId", "versions"] } }
        },
        {
          "name": "Download version",
          "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/files/download/:versionId", "host": ["{{baseUrl}}"], "path": ["files", "download", ":versionId"] } }
        }
      ]
    }
  ]
}
